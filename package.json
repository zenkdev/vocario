{
  "name": "vocario",
  "version": "0.0.37",
  "author": "dotnetjedi",
  "homepage": "https://vocario.web.app/",
  "scripts": {
    "start": "react-scripts start",
    "build": "rimraf ./build && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"./src/{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "pre-commit": "lint-staged",
    "lint": "tsc --noEmit && eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
    "firebase:upload": "node ./scripts/firebase-upload.js",
    "firebase:deploy": "npm run build && firebase deploy --only hosting:web",
    "firebase:get-files": "node ./scripts/firebase-get-files.js"
  },
  "private": true,
  "dependencies": {
    "@capacitor/core": "2.5.0",
    "@ionic/react": "5.7.0",
    "@ionic/react-router": "5.7.0",
    "@reduxjs/toolkit": "1.6.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "13.2.1",
    "@vx/axis": "0.0.199",
    "@vx/scale": "0.0.199",
    "date-fns": "2.23.0",
    "firebase": "9.6.5",
    "formik": "2.2.9",
    "ionicons": "5.5.3",
    "node-sass": "7.0.1",
    "react": "17.0.2",
    "react-audio-player": "0.17.0",
    "react-dom": "17.0.2",
    "react-redux": "7.2.5",
    "react-router": "5.2.1",
    "react-router-dom": "5.3.0",
    "react-scripts": "5.0.0",
    "react-simple-keyboard": "3.2.78",
    "react-sizeme": "3.0.2",
    "zen-observable": "0.8.15"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "Simple vocabulary application made on React and Ionic with a backend on Firebase",
  "devDependencies": {
    "@capacitor/cli": "3.0.0",
    "@types/d3-array": "2.12.3",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.15",
    "@types/react": "17.0.20",
    "@types/react-audio-player": "0.13.0",
    "@types/react-dom": "17.0.9",
    "@types/react-redux": "7.1.18",
    "@types/react-router": "5.1.16",
    "@types/react-router-dom": "5.1.8",
    "@types/webpack-env": "1.16.2",
    "@types/zen-observable": "0.8.3",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "csv-parse": "4.16.3",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "firebase-admin": "10.0.2",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "rimraf": "3.0.2",
    "typescript": "4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
