{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "outDir": "lib",
    "sourceMap": true,

    /* Linting */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
